@page
@model PhamDangXuanDuySE161418PRN221PE.Pages.Producer.EditModel

@{
    ViewData["Title"] = "Edit";
    var role = HttpContext.Session.GetInt32("role");

}
@if (role == 3)
{
<h1>Edit</h1>

<h4>Producer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Producer.ProducerId" />
            <div class="form-group">
                <label asp-for="Producer.ProducerName" class="control-label"></label>
                <input asp-for="Producer.ProducerName" class="form-control" />
                <span asp-validation-for="Producer.ProducerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer.ProducerDescription" class="control-label"></label>
                <input asp-for="Producer.ProducerDescription" class="form-control" />
                <span asp-validation-for="Producer.ProducerDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer.Country" class="control-label"></label>
                <input asp-for="Producer.Country" class="form-control" />
                <span asp-validation-for="Producer.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="alert alert-danger" role="alert">@ViewData["Message"]</p>
    }
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}